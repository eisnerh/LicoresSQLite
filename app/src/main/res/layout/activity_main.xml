<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eisne.licoresql.MainActivity">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="Inventario de Licores"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo">

        <Button
            android:id="@+id/btnAgregarUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Usuarios" />

        <Button
            android:id="@+id/btnConsultarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Usuarios" />

        <Button
            android:id="@+id/btnLVPersonas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List View Personas" />

        <Button
            android:id="@+id/btnSpinnerConsultarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Usuario Spinner" />

        <Button
            android:id="@+id/btnRegistroMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro Licores" />

        <Button
            android:id="@+id/btnListaMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista Licores" />

        <Button
            android:id="@+id/btnDetalleLicores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle Licores" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
